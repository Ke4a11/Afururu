<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

//日付
    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_date"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="ke4a11.ecc.ac.jp.afururu.Money.Money_ListorCal_Detail" />

//お店
    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_shop"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="ke4a11.ecc.ac.jp.afururu.Money.Money_ListorCal_Detail" />
//カテゴリ
    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_category"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="ke4a11.ecc.ac.jp.afururu.Money.Money_ListorCal_Detail" />
//詳細
    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="ke4a11.ecc.ac.jp.afururu.Money.Money_ListorCal_Detail" />
    //メモ
    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_memo"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="ke4a11.ecc.ac.jp.afururu.Money.Money_ListorCal_Detail" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_DB"
        android:text="編集" />
</LinearLayout>