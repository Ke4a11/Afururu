<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ke4a11.ecc.ac.jp.afururu.Money.Money_Setting"
    android:orientation="vertical"
    android:background="#E0FFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="レートを選択してください。"
        android:id="@+id/textView4"
        android:textSize="30sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/MoneySpinner"
        android:layout_gravity="left|top"
        android:spinnerMode="dialog"
        android:background="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="残金"
            android:layout_weight="2"
            android:textColor="#000000" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="残金を入力してください"
            android:inputType="number"
            android:id="@+id/edit_balanceMoney"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新"
        android:id="@+id/updatebtn"
        android:layout_below="@+id/edit_balanceMoney"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初期化"
        android:id="@+id/resetbtn"
        android:layout_alignTop="@+id/updatebtn"
        android:layout_toEndOf="@+id/textView" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="レートのDB確認"
        android:id="@+id/showratedbbtn" />
