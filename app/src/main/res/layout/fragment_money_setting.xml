<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ke4a11.ecc.ac.jp.afururu.Money.Money_Setting">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/MoneySpinner"
        android:layout_gravity="left|top"
        android:spinnerMode="dialog"
        android:background="#e9ff20" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="5"
        android:inputType="number"
        android:id="@+id/edit_balanceMoney"
        android:layout_below="@+id/MoneySpinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新"
        android:id="@+id/updatebtn"
        android:layout_below="@+id/edit_balanceMoney" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="初期化"
        android:id="@+id/resetbtn"
        android:layout_below="@+id/updatebtn" />


</RelativeLayout>
