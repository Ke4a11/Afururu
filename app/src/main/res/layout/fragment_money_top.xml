<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ke4a11.ecc.ac.jp.afururu.Money._MoneyTop"
    android:id="@+id/MoneyTop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello! ___(ユーザ名)"
            android:id="@+id/greet"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:autoText="false"
            android:textColor="#040404" />

        <!-- TOP -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            >

            <!-- カードに載せる情報 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="50dp">

                <!-- 一行目 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"/>

                <!--お金アイコン-->
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:src="@drawable/money1"/>

                <!--ここのidを使ってコードで残金表示を行う-->
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￡"
                    android:autoText="false"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        <!--二行目-->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp">
                <!-- 2行目 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay out"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"/>

                <!--お金アイコン-->
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:src="@drawable/money2"/>

                <!--ここのidを使ってコードで使用金額表示を行う-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￡"
                    android:id="@+id/payout"
                    android:autoText="false"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--三行目-->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate:"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>

                <!--通貨記号はここで一緒に行う-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ noRate"
                    android:id="@+id/rate"
                    android:textSize="30sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1dAgo"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/day1ago"
                            android:text="test"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2dAgo"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/day2ago"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="今日のレートはお得ですよ！"
            android:id="@+id/suggest"
            android:textColor="#050505"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|bottom|center_horizontal">

            <ImageButton
                android:layout_width="82dp"
                android:layout_height="69dp"
                android:id="@+id/calenderButton"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_receipt_black_24dp"
                android:background="#00000000"
                android:layout_gravity="bottom" />
            <ImageButton
                android:layout_width="82dp"
                android:layout_height="69dp"
                android:id="@+id/graphButton"
                android:layout_marginTop="25dp"
                android:background="#00000000"
                android:src="@drawable/ic_equalizer_black_24dp"
                android:layout_gravity="bottom" />
            <ImageButton
                android:layout_width="82dp"
                android:layout_height="69dp"
                android:id="@+id/exchangeButton"
                android:layout_marginTop="25dp"
                android:background="#00000000"
                android:src="@drawable/ic_attach_money_black_24dp"
                android:layout_gravity="bottom" />
            <ImageButton
                android:layout_width="82dp"
                android:layout_height="69dp"
                android:id="@+id/settingButton"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_settings_black_24dp"
                android:background="#00000000"
                android:layout_gravity="bottom" />
            </LinearLayout>
        </LinearLayout>
</FrameLayout>
