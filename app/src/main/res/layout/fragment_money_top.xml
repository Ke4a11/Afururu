<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ke4a11.ecc.ac.jp.afururu.Money._MoneyTop"
    android:id="@+id/MoneyTop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:id="@+id/greet"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:autoText="false"
            android:textColor="#040404" />

        <!-- TOP -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            >

            <!-- カードに載せる情報 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="80dp"
                android:clickable="true"
                android:onClick="toMoneySetting">

                <!-- 一行目 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="残金"
                    android:textSize="35sp"
                    android:layout_gravity="center_vertical"/>

                <!--お金アイコン-->
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:src="@drawable/money2"/>

                <!--ここのidを使ってコードで残金表示を行う-->
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￡"
                    android:autoText="false"
                    android:textSize="40sp"
                    android:layout_gravity="center_vertical" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        <!--二行目-->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:onClick="toListorCal">
                <!-- 2行目 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支出"
                    android:textSize="35sp"
                    android:layout_gravity="center_vertical"/>

                <!--お金アイコン-->
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:src="@drawable/money1"/>

                <!--ここのidを使ってコードで使用金額表示を行う-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￡"
                    android:id="@+id/payout"
                    android:autoText="false"
                    android:textSize="40sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--三行目-->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="toMoneyExchange">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="為替："
                        android:textSize="30sp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <!--通貨記号はここで一緒に行う-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ オフライン"
                        android:id="@+id/rate"
                        android:textSize="40sp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:weightSum="6"
                    android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昨日:"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/day1ago"
                            android:text="¥182.1/£"
                            android:layout_weight="1"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一昨日:"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/day2ago"
                            android:text="¥182.7/£"
                            android:textSize="15sp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="三日前:"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/day3ago"
                            android:text="¥184.1/£"
                            android:textSize="15sp"
                            android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="今日のレートはお得ですよ！"
            android:id="@+id/suggest"
            android:textColor="#050505"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <!--表示調整用のダミーView
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"/>-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|bottom|center_horizontal">

            <com.beardedhen.androidbootstrap.BootstrapButton
